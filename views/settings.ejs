<div class="row mb-4">
    <div class="col-md-12">
        <h1>
            <i class="fas fa-cog"></i> Settings Management
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">System Settings</h5>
            </div>
            <div class="card-body">
                <% if (settings.length === 0) { %>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No settings configured.
                    </div>
                <% } else { %>
                    <form action="/admin/settings/update" method="POST" onsubmit="return validateSettings();">
                        <% settings.forEach(setting => { %>
                            <div class="card mb-3 border-light">
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="setting_<%= setting._id %>" class="form-label fw-bold">
                                            <%= setting.settingKey %>
                                        </label>
                                        <p class="text-muted small"><%= setting.description || 'No description' %></p>
                                        
                                        <% if (setting.type === 'time') { %>
                                            <div class="input-group">
                                                <input type="number" min="0" max="24" class="form-control" id="setting_<%= setting._id %>" name="<%= setting._id %>" value="<%= setting.settingValue %>" required>
                                                <span class="input-group-text">Hour (0-24)</span>
                                            </div>
                                        <% } else if (setting.type === 'boolean') { %>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="setting_<%= setting._id %>" name="<%= setting._id %>" value="true" <% if (setting.settingValue === true || setting.settingValue === 'true') { %>checked<% } %>>
                                                <label class="form-check-label" for="setting_<%= setting._id %>">
                                                    Enabled
                                                </label>
                                            </div>
                                        <% } else if (setting.type === 'number') { %>
                                            <input type="number" class="form-control" id="setting_<%= setting._id %>" name="<%= setting._id %>" value="<%= setting.settingValue %>" required>
                                        <% } else { %>
                                            <input type="text" class="form-control" id="setting_<%= setting._id %>" name="<%= setting._id %>" value="<%= setting.settingValue %>" required>
                                        <% } %>
                                    </div>
                                    <small class="text-muted">Last updated: <%= new Date(setting.updatedAt).toLocaleString() %></small>
                                </div>
                            </div>
                        <% }); %>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Save All Settings
                            </button>
                        </div>
                    </form>
                <% } %>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Add New Setting</h5>
            </div>
            <div class="card-body">
                <form action="/admin/settings/create" method="POST" onsubmit="return validateNewSetting();">
                    <div class="mb-3">
                        <label for="newSettingKey" class="form-label">Setting Key</label>
                        <input type="text" class="form-control" id="newSettingKey" name="settingKey" placeholder="e.g., app_name" required>
                    </div>

                    <div class="mb-3">
                        <label for="newSettingValue" class="form-label">Setting Value</label>
                        <input type="text" class="form-control" id="newSettingValue" name="settingValue" placeholder="e.g., NamChamps" required>
                    </div>

                    <div class="mb-3">
                        <label for="newSettingType" class="form-label">Type</label>
                        <select class="form-select" id="newSettingType" name="type" required>
                            <option value="">Select type...</option>
                            <option value="text">Text</option>
                            <option value="number">Number</option>
                            <option value="boolean">Boolean</option>
                            <option value="time">Time (Hour)</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="newSettingDesc" class="form-label">Description</label>
                        <textarea class="form-control" id="newSettingDesc" name="description" rows="3" placeholder="Optional description..."></textarea>
                    </div>

                    <button type="submit" class="btn btn-success w-100">
                        <i class="fas fa-plus"></i> Add Setting
                    </button>
                </form>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">System Info</h5>
            </div>
            <div class="card-body">
                <p><strong>Node Version:</strong> <code><%= systemInfo.nodeVersion %></code></p>
                <p><strong>Environment:</strong> <code><%= systemInfo.environment %></code></p>
                <p><strong>Server Time:</strong> <%= new Date().toLocaleString() %></p>
                <hr>
                <p class="mb-0"><small class="text-muted">Last refreshed: <%= new Date().toLocaleTimeString() %></small></p>
            </div>
        </div>
    </div>
</div>

<script>
function validateSettings() {
    // Basic validation can be added here
    return true;
}

function validateNewSetting() {
    const key = document.getElementById('newSettingKey').value.trim();
    const value = document.getElementById('newSettingValue').value.trim();
    const type = document.getElementById('newSettingType').value;

    if (!key || !value || !type) {
        alert('Please fill in all required fields');
        return false;
    }

    if (!/^[a-z_]+$/.test(key)) {
        alert('Setting key should only contain lowercase letters and underscores');
        return false;
    }

    return true;
}
</script>
