<div class="row mb-4">
    <div class="col-md-12">
        <h1>
            <i class="fas fa-chart-bar"></i> User Counts: <%= userName %>
        </h1>
        <a href="/admin/users" class="btn btn-secondary mt-3">
            <i class="fas fa-arrow-left"></i> Back to Users
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white shadow-sm">
            <div class="card-body">
                <h6 class="card-title mb-0">Total Count</h6>
                <h2><%= totalCount %></h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white shadow-sm">
            <div class="card-body">
                <h6 class="card-title mb-0">Days Active</h6>
                <h2><%= daysActive %></h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white shadow-sm">
            <div class="card-body">
                <h6 class="card-title mb-0">Average Daily</h6>
                <h2><%= (totalCount / daysActive).toFixed(1) %></h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white shadow-sm">
            <div class="card-body">
                <h6 class="card-title mb-0">Last Count</h6>
                <h2><%= lastCount %></h2>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Count Trend</h5>
            </div>
            <div class="card-body">
                <canvas id="trendChart" height="80"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Weekly Summary</h5>
            </div>
            <div class="card-body">
                <canvas id="weeklySummaryChart" height="80"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">Daily Count History</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Count</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% counts.forEach(count => { %>
                        <tr>
                            <td><strong><%= new Date(count.date).toLocaleDateString() %></strong></td>
                            <td><span class="badge bg-primary"><%= count.count %></span></td>
                            <td>
                                <% if (count.isActive) { %>
                                    <span class="badge bg-success">Active</span>
                                <% } else { %>
                                    <span class="badge bg-secondary">Inactive</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    // Wait for Chart.js to load
    function initUserCharts() {
        if (typeof Chart === 'undefined') {
            setTimeout(initUserCharts, 100);
            return;
        }

        // Trend Chart
        const trendCtx = document.getElementById('trendChart').getContext('2d');
        new Chart(trendCtx, {
        type: 'line',
        data: {
            labels: <%- JSON.stringify(chartData.labels) %>,
            datasets: [{
                label: 'Daily Count',
                data: <%- JSON.stringify(chartData.data) %>,
                borderColor: '#0d6efd',
                backgroundColor: 'rgba(13, 110, 253, 0.1)',
                borderWidth: 2,
                tension: 0.3,
                fill: true,
                pointRadius: 4,
                pointBackgroundColor: '#0d6efd'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: true }
            },
            scales: {
                y: { beginAtZero: true }
            }
        }
    });

    // Weekly Summary Chart
    const weeklyCtx = document.getElementById('weeklySummaryChart').getContext('2d');
    new Chart(weeklyCtx, {
        type: 'bar',
        data: {
            labels: <%- JSON.stringify(weeklySummary.labels) %>,
            datasets: [{
                label: 'Weekly Count',
                data: <%- JSON.stringify(weeklySummary.data) %>,
                backgroundColor: '#198754',
                borderColor: '#198754',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: true }
            },
            scales: {
                y: { beginAtZero: true }
            }
        }
    });
    }

    // Initialize charts when page loads
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initUserCharts);
    } else {
        initUserCharts();
    }
</script>
