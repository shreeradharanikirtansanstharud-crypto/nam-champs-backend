<div class="row mb-4">
    <div class="col-md-8">
        <h1><i class="fas fa-sign-in-alt"></i> Admin Login</h1>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-lg">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="fas fa-crown text-warning" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">NamChamps Admin</h3>
                    <p class="text-muted">Super Admin Portal</p>
                </div>

                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle"></i> <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <form action="/admin/login" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control form-control-lg" id="username" name="username" placeholder="Enter username" required>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="Enter password" required>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </button>
                    </div>
                </form>

                <hr>
                <p class="text-center text-muted small">
                    <i class="fas fa-shield-alt"></i> Secure Admin Access Only
                </p>
            </div>
        </div>
    </div>
</div>
